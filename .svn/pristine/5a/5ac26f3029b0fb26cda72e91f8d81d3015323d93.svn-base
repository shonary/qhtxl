<script type="text/javascript">
function ErrMsg(msg){
	alert(msg);
}

function Validate_PWD(){
	if(jsTrim($("#sys-name").attr("value")).length<2){
		ErrMsg("昵称过短(最小长度为2)");
		return;
	}else if(jsTrim($("#sys-oldpwd").attr("value")).length<6){
		ErrMsg("原始密码过短(最小长度为6)");
		return;
	}else if(jsTrim($("#sys-pwd1").attr("value")).length<6){
		ErrMsg("新密码过短(最小长度为6)");
		return;
	}else if($("#sys-pwd1").attr("value")!=$("#sys-pwd2").attr("value")){
		ErrMsg("请检查两次输入密码是否相同");
		return;
	}
	ErrMsg("success");
	$("#system")[0].submit();
}
</script>
